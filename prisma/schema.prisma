generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  wallet    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions             Session[]
  stakePositions       StakePosition[]
  rewardNfts           RewardNft[]
  cashbackTransactions CashbackTransaction[]
  deviceFingerprints   DeviceFingerprint[]

  @@index([wallet])
  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  jwtId     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([jwtId])
  @@map("sessions")
}

model ProgramState {
  id                    String   @id @default(uuid())
  programId             String   @unique
  rewardTokenMint       String
  isPaused              Boolean  @default(false)
  currentEpoch          BigInt   @default(0)
  currentEpochStartTs   BigInt?
  currentWeeklyEmission BigInt?
  totalStaked           BigInt   @default(0)
  totalRewardPool       BigInt   @default(0)
  totalStakingPower     BigInt   @default(0)
  updatedAt             DateTime @updatedAt

  @@index([programId])
  @@map("program_states")
}

model StakingTier {
  id               String   @id @default(uuid())
  tierId           Int      @unique
  multiplier       BigInt
  minMonths        Int
  maxMonths        Int
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  stakePositions StakePosition[]

  @@index([tierId])
  @@map("staking_tiers")
}

model StakePosition {
  id                   String   @id @default(uuid())
  owner                String
  pda                  String   @unique
  amount               BigInt
  durationMonths       Int
  tierId               Int
  isLocked             Boolean
  powerMultiplier      BigInt
  stakingPower         BigInt
  startTs              BigInt
  unlockTs             BigInt
  lastRewardTs         BigInt
  lastClaimTs          BigInt?
  cooldownEnd          BigInt?
  pendingPrincipal     BigInt?
  isActive             Boolean  @default(true)
  positionSeed         BigInt
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user                 User                  @relation(fields: [owner], references: [wallet], onDelete: Cascade)
  tier                 StakingTier           @relation(fields: [tierId], references: [tierId])
  rewardNfts           RewardNft[]
  penaltyTransactions  PenaltyTransaction[]

  @@index([owner])
  @@index([pda])
  @@index([isActive])
  @@map("stake_positions")
}

model RewardNft {
  id            String   @id @default(uuid())
  owner         String
  pda           String   @unique
  nftAsset      String
  rewardAmount  BigInt
  vestTs        BigInt
  isActive      Boolean  @default(true)
  nftSeed       BigInt
  positionId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User           @relation(fields: [owner], references: [wallet], onDelete: Cascade)
  position      StakePosition? @relation(fields: [positionId], references: [id])

  @@index([owner])
  @@index([nftAsset])
  @@index([isActive])
  @@map("reward_nfts")
}

model Event {
  id          String   @id @default(uuid())
  signature   String   @unique
  programId   String
  instruction String
  slot        BigInt
  timestamp   BigInt
  commitment  String   @default("confirmed")
  finalized   Boolean  @default(false)
  payload     Json
  createdAt   DateTime @default(now())

  @@index([signature])
  @@index([slot])
  @@index([instruction])
  @@index([programId])
  @@map("events")
}

model ComplianceStatus {
  id        String   @id @default(uuid())
  wallet    String   @unique
  status    String
  source    String?
  updatedAt DateTime @updatedAt

  @@index([wallet])
  @@map("compliance_status")
}

model IdempotencyRecord {
  id          String   @id @default(uuid())
  key         String   @unique
  wallet      String
  endpoint    String
  requestBody Json
  response    Json
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  @@index([key])
  @@index([wallet])
  @@index([expiresAt])
  @@map("idempotency_records")
}

model StakingSnapshot {
  id           String   @id @default(uuid())
  userId       String
  wallet       String
  totalStaked  BigInt
  snapshotDate DateTime @default(now())

  @@index([userId, snapshotDate])
  @@index([wallet, snapshotDate])
  @@map("staking_snapshots")
}

model CashbackPool {
  id           String    @id @default(uuid())
  poolType     String
  balance      BigInt    @default(0)
  lastFundedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([poolType])
  @@map("cashback_pools")
}

model CashbackTransaction {
  id              String   @id @default(uuid())
  userId          String
  wallet          String
  amount          BigInt
  poolType        String
  transactionType String
  metadata        Json?
  createdAt       DateTime @default(now())

  user User @relation(fields: [wallet], references: [wallet], onDelete: Cascade)

  @@index([wallet])
  @@index([poolType])
  @@map("cashback_transactions")
}

model Referral {
  id               String   @id @default(uuid())
  referrerWallet   String
  referredWallet   String   @unique
  welcomeBonusPaid Boolean  @default(false)
  totalRewards     BigInt   @default(0)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([referrerWallet])
  @@index([referredWallet])
  @@map("referrals")
}

model ReferralReward {
  id             String   @id @default(uuid())
  referralId     String
  referrerWallet String
  amount         BigInt
  epoch          BigInt
  createdAt      DateTime @default(now())

  @@index([referrerWallet])
  @@index([epoch])
  @@map("referral_rewards")
}

model PenaltyTransaction {
  id             String   @id @default(uuid())
  positionId     String
  wallet         String
  penaltyAmount  BigInt
  toRewardPool   BigInt
  toProtocol     BigInt
  tierMultiplier Int
  createdAt      DateTime @default(now())

  position StakePosition @relation(fields: [positionId], references: [id], onDelete: Cascade)

  @@index([wallet])
  @@index([positionId])
  @@map("penalty_transactions")
}

model RevenueTransaction {
  id               String   @id @default(uuid())
  source           String
  amount           BigInt
  toRewardPool     BigInt?
  toCashbackPool   BigInt?
  transactionHash  String?
  createdAt        DateTime @default(now())

  @@index([source])
  @@index([createdAt])
  @@map("revenue_transactions")
}

model DeviceFingerprint {
  id        String   @id @default(uuid())
  wallet    String
  deviceId  String
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [wallet], references: [wallet], onDelete: Cascade)

  @@index([wallet])
  @@index([deviceId])
  @@index([ipAddress])
  @@map("device_fingerprints")
}
